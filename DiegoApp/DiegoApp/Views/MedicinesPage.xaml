<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiegoApp.Views.MedicinesPage">    
    <ContentPage.Content>        
        <Frame>
            <StackLayout>
                <Label Text="Enter Your Medications" HorizontalOptions="Center" FontSize="Title" TextColor="Red" 
                        FontAttributes="Bold"/>
                <Entry Text="{Binding MedicineName}" Placeholder="Medicine Name" Margin="10" TextColor="Black"/>
                <Label Text="Enter Your Date" HorizontalOptions="Start" FontSize="Body" TextColor="Black"/>
                <DatePicker Date="{Binding EntryDate}" Margin="10" TextColor="Black" />                
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>